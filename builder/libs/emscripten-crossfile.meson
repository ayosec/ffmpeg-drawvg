# From https://gist.github.com/kleisauke/acfa1c09522705efa5eb0541d2d00887

[binaries]
c = 'emcc'
cpp = 'em++'
ar = 'emar'
ranlib = 'emranlib'
pkg-config = ['pkg-config', '--static']
exe_wrapper = 'node'

[properties]
needs_exe_wrapper = true

[built-in options]
c_thread_count = 0
cpp_thread_count = 0

[host_machine]
system = 'emscripten'
cpu_family = 'wasm32'
cpu = 'wasm32'
endian = 'little'
